<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards for WP Plugin Studio">
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array" value="plugin-boiler" />
		</properties>
	</rule>
	
	<rule ref="WordPress.Utils.I18nTextDomainFixer">
		<properties>
			<property name="old_text_domain" type="array" value="ignore" />
			<property name="new_text_domain" value="plugin-boiler" />
		</properties>
	</rule>
</ruleset>